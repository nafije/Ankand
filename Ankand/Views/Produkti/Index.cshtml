@model IEnumerable<Produkti>


@{
    ViewData["Tittle"] = "Ankand";
}
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.Name
                                    <a class="text-white float-right" asp-action="Delete1" asp-route-id="@item.ID"><i class="bi bi-trash"></i></a>
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.ImageURL" width=100% alt="@item.Name">
                    </div>



                    <div class="col-md-6">
                        <dic class="card-body">
                            <p class="card-text"><b>Name: </b>@item.Name</p>
                            <p class="card-text"><b>Description: </b>@item.Description</p>
                            <p class="card-text"><b>Created On: </b>@item.StartDate.ToString("dd MMM yy")</p>
                            @{
                                DateTime currentDate = DateTime.Now;
                                DateTime enddate = @item.EndDate;
                                TimeSpan remainingTime = enddate - currentDate;
                                
                                if (remainingTime.TotalSeconds > 0)
                                {
                                    <p><b>Remaining Time: </b> @remainingTime.ToString(@"hh\:mm\:ss")</p>

                                    

                                    
                                }
                                else
                                {
                                    <p><b>Auction has ended</b></p>
                                }
                            }
                        </dic>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@item.ID"><i class="bi bi-eye-fill"></i>Details</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
@await Html.PartialAsync("_createItem","Produkti")